  <script>







     var theform=document.forms["cakeform"];

     var cake_decoration_price = new Array();
          cake_decoration_price['decoration1']=20;
          cake_decoration_price['decoration2']=20;
          cake_decoration_price['decoration3']=20;
          cake_decoration_price['decoration4']=20;
          cake_decoration_price['decoration5']=20;
          cake_decoration_price['decoration6']=20;
          cake_decoration_price['decoration7']=20;



function getCakeDecoPrice()
{
  var cakeDecoPrice=0;

  var theForm = document.forms["cakeform"];

  var selectedDeco = theForm.elements["deco"];

  for(var i = 0; i < selectedDeco.length; i++)
  {

      if(selectedDeco[i].checked)
      {

          cakeDecoPrice = 20;

          break;
      }
  }

  return cakeDecoPrice;
}



var cake_shape_price = new Array();
   cake_shape_price['shape1']=20;
   cake_shape_price['shape2']=40;
   cake_shape_price['shape3']=30;
   cake_shape_price['shape4']=20;
   cake_shape_price['shape5']=50;
   cake_shape_price['shape6']=40;
   cake_shape_price['shape7']=50;
   cake_shape_price['shape8']=40;
   cake_shape_price['shape9']=20;




function getCakeShapePrice()
{
var cakeShapePrice=0;

var theForm = document.forms["cakeform"];

var selectedShape = theForm.elements["shape"];

for(var i = 0; i < selectedShape.length; i++)
{

if(selectedShape[i].checked)
{

   cakeShapePrice = cake_shape_price[selectedShape[i].value];

   break;
}
}

return cakeShapePrice;
}





function getCakeFlavorPrice()
{
var cakeFlavorPrice=0;
//Get a reference to the form id="cakeform"
var theForm = document.forms["cakeform"]
//Get a reference to the cake the user Chooses name=selectedCake":
var selectedFlavor = theForm.elements["flavor"];

for(var i = 0; i < selectedFlavor.length; i++)
{

if(selectedFlavor[i].checked)
{

   cakeFlavorPrice = 10;

   break;
}
}

return cakeFlavorPrice;
}

function getCakeColorPrice()
{
var cakeColorPrice=0;
//Get a reference to the form id="cakeform"
var theForm = document.forms["cakeform"];
//Get a reference to the cake the user Chooses name=selectedCake":
var selectedColor = theForm.elements["color"];
//Here since there are 4 radio buttons selectedCake.length = 4
//We loop through each radio buttons
for(var i = 0; i < selectedColor.length; i++)
{
//if the radio button is checked
if(selectedColor[i].checked)
{

   cakeColorPrice = 5;

   break;
}
}
//We return the cakeSizePrice
return cakeColorPrice;
}


