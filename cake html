function getTotal()
{
  var budget=document.getElementById('budget').value;
  var slice=document.getElementById('numberOfSlice').value;
  var a=parseInt(budget);
  var b=parseInt(slice);
  var total=a*b;



  var cakePrice = getCakeDecoPrice() + getCakeShapePrice() + getCakeFlavorPrice() + getCakeColorPrice();

  var tax=0.13*cakePrice;
  var finaltotal=tax+cakePrice

  if(cakePrice<=budget){

  document.getElementById('subtotal').innerHTML = cakePrice;
  document.getElementById('tax').innerHTML = tax;
  document.getElementById('finaltotal').innerHTML = finaltotal;
      }
  else{
      alert("please select price under budget");
  }            

}



